position = 50
zero_landed = 0  # counts times landing exactly on 0 (p1)
zero_crossed = 0  # counts times passing through 0 (p2)

with open('advent-of-code-2025/day-1/data/input.txt', 'r') as file:
    for line in file:
        line = line.strip()
        if not line:
            continue

        direction = line[0]
        rotation = int(line[1:])

        # move step by step
        for _ in range(rotation):
            if direction == 'L':
                position = (position - 1 + 100) % 100
            else:
                position = (position + 1) % 100

            if position == 0:
                zero_crossed += 1  # p2

        # check if we land exactly on 0 after rotation
        if position == 0:
            zero_landed += 1  # p1

        print(f"{line}: {position} {zero_crossed}")

print("Times landed on 0:", zero_landed)
print("Times crossed 0:", zero_crossed)
